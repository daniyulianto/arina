<?xml version="1.0" encoding="UTF-8"?>
<odoo>

	<record id="view_refresh_token_search" model="ir.ui.view">
		<field name="name">refresh.token.search</field>
		<field name="model">refresh.token</field>
		<field name="arch" type="xml">
			<search>
				<field name="user_id" />
				<field name="name" />
				<field name="write_date" />
			</search>
		</field>
	</record>

	<record id="view_refresh_token_tree" model="ir.ui.view">
		<field name="name">refresh.token.tree</field>
		<field name="model">refresh.token</field>
		<field name="arch" type="xml">
			<tree>
				<field name="name" />
				<field name="user_id" />
				<field name="write_date" />
				<field name="state" />
			</tree>
		</field>
	</record>

	<record id="view_refresh_token_form" model="ir.ui.view">
		<field name="name">refresh.token.form</field>
		<field name="model">refresh.token</field>
		<field name="arch" type="xml">
			<form>
				<sheet>
					<header>
						<field name="state" widget="statusbar" clickable="True" />
					</header>
					<group>
						<group>
							<field name="name" />
							<field name="user_id" />
						</group>
						<group>
						</group>
					</group>
				</sheet>
			</form>
		</field>
	</record>

	<record model="ir.actions.act_window" id="action_refresh_token">
		<field name="name">Refresh Token</field>
		<field name="res_model">refresh.token</field>
		<field name="view_mode">tree,form</field>
	</record>

	<menuitem id="menu_refresh_token" name="Refresh Token" action="action_refresh_token"
		parent="base.menu_ir_property" sequence="10" />

	<record model="ir.ui.view" id="view_rest_api_log_search">
		<field name="name">rest.api.log.search</field>
		<field name="model">rest.api.log</field>
		<field name="arch" type="xml">
			<search>
				<field name="create_uid" string="Log"
					filter_domain="['|','|','|',('url','ilike',self),('create_uid','ilike',self),('request_method','ilike',self),('status_code','ilike',self)]" />
				<separator />
				<filter string="Not Success" name="status_code_not_200"
					domain="[('status_code','!=',200)]" />
				<filter string="Success" name="status_code_200" domain="[('status_code','=',200)]" />
				<separator />
				<group expand="0" name="group_by" string="Group By">
					<filter name="group_create_uid" string="User" context="{'group_by': 'create_uid'}" />
					<filter name="group_status_code" string="Status Code"
						context="{'group_by': 'status_code'}" />
				</group>
			</search>
		</field>
	</record>

	<record model="ir.ui.view" id="view_rest_api_log_tree">
		<field name="name">rest.api.log.tree</field>
		<field name="model">rest.api.log</field>
		<field name="arch" type="xml">
			<tree create="0" edit="0" decoration-danger="status_code != '200'">
				<field name="create_uid" string="User" />
				<field name="url" />
				<field name="request_method" />
				<field name="request_time" />
				<button name="action_download_header" type="object" icon="fa-download" class="oe_link"
					string="Download Request" />
				<field name="header_filename" string="Header" />
				<field name="is_request_body" invisible="1" />
				<button name="action_download_request" type="object" icon="fa-download" class="oe_link"
					attrs="{'invisible':[('is_request_body','=',False)]}" string="Download Request" />
				<field name="request_filename" string="Request" />
				<field name="response_time" optional="show" />
				<button name="action_download_response" type="object" icon="fa-download" class="oe_link"
					string="Download Response" />
				<field name="response_filename" string="Response" />
				<field name="status_code" />
			</tree>
		</field>
	</record>

	<record model="ir.actions.act_window" id="action_rest_api_log">
		<field name="name">Rest API Log</field>
		<field name="res_model">rest.api.log</field>
		<field name="view_mode">tree</field>
		<field name="context">{'search_default_status_code_not_200':1}</field>
	</record>

	<menuitem name="API Log" id="menu_rest_api_log" action="action_rest_api_log"
		parent="base.menu_ir_property" sequence="20" />
</odoo>
